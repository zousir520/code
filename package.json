{
	"name": "vibbyai",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "npm run build:content && npm run build:docs && npm run build:search && vite dev",
		"build": "npm run build:content && npm run build:docs && npm run build:search && vite build",
		"build:content": "node scripts/build-content.js",
		"build:docs": "node scripts/build-docs.js",
		"build:search": "node scripts/build-search-index.js",
		"build:vercel": "npm run build:content && npm run build:docs && npm run build:search && ADAPTER=vercel vite build",
		"build:cloudflare": "npm run build:content && npm run build:docs && npm run build:search && ADAPTER=cloudflare vite build",
		"preview": "vite preview",
		"preview:vercel": "ADAPTER=vercel vite preview",
		"preview:cloudflare": "ADAPTER=cloudflare vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:rules": "bash scripts/check-rules.sh",
		"check:roo": "bash scripts/check-roo-rules.sh",
		"check:all": "bash scripts/check-rules.sh && bash scripts/check-roo-rules.sh",
		"typesafe-i18n": "typesafe-i18n",
		"migrate:database": "npx tsx scripts/migrate-to-database.ts",
		"db:migrate": "npm run migrate:database"
	},
	"devDependencies": {
		"@lucide/svelte": "^0.525.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-cloudflare": "^4.7.4",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@types/node": "^24.0.10",
		"autoprefixer": "^10.4.21",
		"clsx": "^2.1.1",
		"postcss": "^8.5.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"sveltekit-sitemap": "^1.0.21",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^3.4.0",
		"tw-animate-css": "^1.3.5",
		"typescript": "^5.0.0",
		"vite": "^6.2.6"
	},
	"dependencies": {
		"@supabase/ssr": "^0.6.1",
		"@supabase/supabase-js": "^2.50.4",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltekit-i18n/base": "^1.3.7",
		"@sveltekit-i18n/parser-default": "^1.1.1",
		"@types/mdast": "^4.0.4",
		"better-auth": "^1.2.12",
		"bits-ui": "^2.8.10",
		"dotenv": "^17.0.1",
		"drizzle-orm": "^0.44.2",
		"gray-matter": "^4.0.3",
		"lucide-svelte": "^0.525.0",
		"marked": "^16.1.0",
		"mdast": "^3.0.0",
		"mdsvex": "^0.12.6",
		"remark": "^15.0.1",
		"remark-parse": "^11.0.0",
		"remark-slug": "^8.0.0",
		"shiki": "^3.8.1",
		"typesafe-i18n": "^5.26.2",
		"xlsx": "^0.18.5"
	}
}
